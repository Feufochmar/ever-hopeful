{
  "name": "ever-hopeful",
  "version": "0.0.1",
  "description": "A wiki using Node.js",
  "author": "Feufochmar <feufochmar@feuforeve.fr>",
  "keywords": [
    "wiki",
    "git",
    "engine",
    "gollum",
    "cms",
    "markdown"
  ],
  "standard": {
    "ignore": [
      "/public/vendor/"
    ],
    "globals": [
      "expect",
      "describe",
      "Git",
      "sinon",
      "chai"
    ]
  },
  "main": "ever-hopeful",
  "bin": {
    "ever-hopeful": "./ever-hopeful"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Feufochmar/ever-hopeful"
  },
  "directories": {
    "lib": "./lib/"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.10.0",
    "commander": "^2.5.1",
    "cors": "^2.7.1",
    "ecstatic": "^3.2.0",
    "express": "^4.10.6",
    "express-flash": "0.0.2",
    "express-session": "^1.9.3",
    "express-validator": "^5.1.1",
    "gravatar": "^1.1.0",
    "js-yaml": "^3.1.0",
    "lodash": "^4.17.5",
    "markdown-toc": "^1.2.0",
    "marked": "^0.3.5",
    "memorystore": "^1.6.0",
    "method-override": "^2.3.0",
    "mkdirp": "^0.5.1",
    "morgan": "^1.5.0",
    "multer": "^1.3.0",
    "node-syntaxhighlighter": "*",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-mastodon": "^0.1.3",
    "pug": "^2.0.0-rc.4",
    "semver": "^5.3.0",
    "serve-favicon": "^2.1.7",
    "transliteration": "^1.6.2"
  },
  "devDependencies": {
    "chai": "*",
    "mocha": "*",
    "nodemon": "^1.10.2",
    "sinon": "^4.5.0"
  },
  "scripts": {
    "test": "node_modules/.bin/mocha test/spec",
    "start": "NODE_ENV=production ./ever-hopeful -c config.yaml",
    "start-dev": "NODE_ENV=development nodemon ./ever-hopeful -c config.yaml"
  },
  "engines": {
    "node": ">=0.8",
    "npm": ">=1.1"
  },
  "license": "MIT"
}
