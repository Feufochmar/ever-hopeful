{
  "name": "ever-hopeful",
  "version": "0.0.2",
  "description": "A wiki using Node.js",
  "author": "Feufochmar <feufochmar@feuforeve.fr>",
  "keywords": [
    "wiki",
    "git",
    "engine",
    "gollum",
    "cms",
    "markdown"
  ],
  "standard": {
    "ignore": [
      "/public/vendor/"
    ],
    "globals": [
      "expect",
      "describe",
      "Git",
      "sinon",
      "chai"
    ]
  },
  "main": "ever-hopeful",
  "bin": {
    "ever-hopeful": "./ever-hopeful"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Feufochmar/ever-hopeful"
  },
  "directories": {
    "lib": "./lib/"
  },
  "dependencies": {
    "body-parser": "^1.10.0",
    "commander": "^5.0.0",
    "cors": "^2.7.1",
    "express": "^4.10.6",
    "express-flash": "0.0.2",
    "express-session": "^1.9.3",
    "express-validator": "^6.4.0",
    "he": "^1.1.1",
    "js-yaml": "^3.1.0",
    "lodash": "^4.17.5",
    "markdown-toc": "^1.2.0",
    "marked": "^0.8.2",
    "memorystore": "^1.6.0",
    "method-override": "^3.0.0",
    "morgan": "^1.5.0",
    "multer": "^1.3.0",
    "node-syntaxhighlighter": "*",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-mastodon": "^0.1.3",
    "pug": "^2.0.0-rc.4",
    "semver": "^7.1.3",
    "serve-favicon": "^2.1.7",
    "transliteration": "^2.1.8"
  },
  "devDependencies": {
    "chai": "*",
    "mocha": "7.1.1",
    "nodemon": "^2.0.2",
    "sinon": "^9.0.1"
  },
  "scripts": {
    "test": "node_modules/.bin/mocha test/spec",
    "start": "./ever-hopeful -c config.yaml",
    "start-dev": "nodemon ./ever-hopeful -c config.yaml"
  },
  "engines": {
    "node": ">=10.12",
    "npm": ">=1.1"
  },
  "license": "MIT",
  "mocha": {
    "reporter": "spec",
    "require": "test/support/setup",
    "check-leaks": true,
    "recursive": true,
    "globals": "strNew"
  }
}
