extends layout

include mixins/form

block tools
  +tools('show-asset', asset)

block content

  #js--content.show
    +notices()
    h1 #{asset.wikiname}

    img(src=asset.urlForDisplay())

    h2 Rename this asset

    form(action=asset.urlForMove(), method='post', class='edit')
      .form-group
        input.form-control(required, type='text', placeholder='Enter the asset name', name='assetName', value=asset.wikiname)
        input(type='hidden', name='_method', value='put')

      input.btn.btn-primary(type='submit', value='Rename')


  p(class=klass) Updated by&nbsp;
    b
      +author(asset.metadata.author, asset.metadata.email)
    |,&nbsp;
    b(title=asset.metadata.date) #{asset.metadata.relDate}&nbsp;
    | &ndash; #{asset.metadata.hash}
